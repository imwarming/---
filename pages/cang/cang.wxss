/* pages/cang/cang.wxss */
page{
    background: #f0f0f0;
}
.scroll_title{
    width: 100%;
    height: 60rpx;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 56rpx;
    background: #F7F7F7;
    font-size: 16px;
    white-space: nowrap;
}
.tab-item{
    display: inline-block;
    width: 25%;
    /*box-sizing: border-box;*/
    font-size: 28rpx;
    height: 59rpx;
    line-height: 59rpx;
    text-align: center;
}
.active{
    font-size: 36rpx;
    color: #333333;
    border-bottom: 2rpx solid #FF5858;
}
.saixuan{
    display: flex;
}
.saixuan>view{
    box-sizing: border-box;
    width: 33.33%;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #808080;
    text-align: center;
    background: #ffffff;
}

.goods_details{
    display: inline-block;
    width: 368rpx;
    max-width: 50%;
    box-sizing: border-box;
}
.goods_details:nth-child(2n){
    margin-left: 12rpx;
}
.goods_name_pricce{
    box-sizing: border-box;
    height: 152rpx;
    padding: 22rpx 33rpx;
    font-size: 28rpx;
}
.goods_name{
    overflow : hidden;
    text-overflow : ellipsis;
    display : -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
}
