/* pages/shop_store/shop_store.wxss */
.nav{
    text-align: center;
}
.nav input{
    display: inline-block;
    width: 526rpx;
    font-size: 28rpx;
    border: 1rpx solid #333333;
    border-radius: 16rpx;
    color: #808080;
}
.store_title{
    box-sizing: border-box;
    display: flex;
    height: 200rpx;
    padding: 34rpx;
}
.store_icon{
    width: 120rpx;
    height: 120rpx;
    border-radius: 120rpx;
    overflow: hidden;
    margin-right: 12rpx;
}
.store_name{
    font-weight: bold;
    font-size: 36rpx;
    color: #333333;
}
.store_intro{
    display: flex;
}
.store_intro>view{
    font-size: 24rpx;
    overflow : hidden;
    text-overflow : ellipsis;
    display : -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.scroll_title{
    width: 100%;
    height: 60rpx;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 56rpx;
    background: #F7F7F7;
    font-size: 16px;
    white-space: nowrap;
}
.tab-item{
    display: inline-block;
    width: 25%;
    /*box-sizing: border-box;*/
    font-size: 28rpx;
    height: 59rpx;
    line-height: 59rpx;
    text-align: center;

}
.active{
    color: #4675F9;
    border-bottom: 1rpx solid #FF5858;
}
.goods_details{
    display: inline-block;
    width: 368rpx;
    max-width: 50%;
    box-sizing: border-box;
}
.goods_details:nth-child(2n){
    margin-left: 12rpx;
}
.goods_name_pricce{
    box-sizing: border-box;
    height: 152rpx;
    padding: 22rpx 33rpx;
    font-size: 28rpx;
}
.goods_name{
    overflow : hidden;
    text-overflow : ellipsis;
    display : -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
}
