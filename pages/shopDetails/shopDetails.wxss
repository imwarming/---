/* pages/shopDetails/shopDetails.wxss */
text{
  vertical-align: text-top;
}
image{
  vertical-align: top;
}
.lunbo{
  text-align: center;
  width: 100%;
  height: 350px;
}
swiper{
  height: 100%;
}
swiper image{
  width: 100%;
  height: 100%;
}
swiper-item{
  height: 350px
}
.shop_name{
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding-left:33rpx;
  padding-right:33rpx;
}
.goods_name{
  width:598rpx;font-size:30rpx;
  overflow : hidden;
  text-overflow : ellipsis;
  display : -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.chengnuo{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.chengnuo>view{
  text-align: left;
  font-size: 24rpx;
}
.chengnuo>view:not(:first-child){
  margin-left: 25rpx;
}
.comment{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.goods_details{
  width: 100%;
  text-align: center;
}
.evaluate{
  width: 100%;
}
.user_evaluate{
  display: flex;
  box-sizing: border-box;
}
.user_evaluate_photo{
  width: 56rpx;
  height: 56rpx;
  border-radius: 56rpx;
  overflow: hidden;
}
.user_evaluate_photo image{
  width: 100%;
  height: 100%;
}
.user_nickname{
  flex: 1;
  margin-left: 20rpx;
}
.user_nickname text{
  font-size: 28rpx;
}
.comment_container{
  font-size: 28rpx;
}
.xinghao text{
  font-size: 24rpx;
  vertical-align: middle;
}
.comment-image{
  display: flex;
  box-sizing: border-box;
  width: 100%;
}
.comment-image image{
  width: 224rpx;
  height: 224rpx;
}
.comment-image image:nth-child(2n){
  margin-left: 6rpx;
  margin-right: 6rpx;
}
.shop_store{
  width: 100%;
  display: flex;
  box-sizing: border-box;
}
.store_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  overflow: hidden;
}
.store_img image{
  width: 100%;
  height: 100%;
}
.store_details{
  flex:1
}






.bottom{
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-wrap: wrap;
  height: 96rpx;
}
.guige{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  box-sizing: border-box;
}
.guige_title{
  display: flex;
  margin-top: 20rpx;
  height: 172rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.guige_image{
  margin-left: 32rpx;
  margin-right: 20rpx;
  width: 172rpx;
  height: 152rpx;
  overflow: hidden;
}
.guige_image image{
  width: 100%;
  height: 100%;
}
.price_kucun{
  flex:1
}

.guige_details{
  margin-left:32rpx;
  height: 65%;
}
.guige_details_first{
  font-size: 28rpx;
  height: 27rpx;
  line-height: 27rpx;
  margin-top: 19rpx;
  margin-bottom: 19rpx;
}
.guige_details_second label{
  display: inline-block;
  background: #EDEDED;
  min-width: 100rpx;
  height: 52rpx;
  border-radius: 8rpx;
  color: #333333;
  text-align: center;
  font-size: 24rpx;
  line-height: 52rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
  margin-right: 20rpx;
}

.active{
  background: #FF5858!important;
  color: #fff!important;
}

.buyNum{
  margin-left:32rpx;
  height: 88rpx;
  display: flex;
  box-sizing: border-box;
  padding-top: 25rpx;
}
.buyNum view:first-child{
  height: 52rpx;
  font-size: 28rpx;
}
.buyNum view:last-child{
  flex: 1;
  box-sizing: border-box;
  margin-right:32rpx;
  text-align: right;
}
.buyNum button{
  display: inline-block;
  height: 52rpx;
  width: 52rpx;
  line-height: 52rpx;
  background: #EDEDED;
  color: #333333;
  padding-left: 0;
  padding-right: 0;
  text-align: center;
  font-size:28rpx;
}
.buyNum input{
  display: inline-block;
  width: 80rpx;
  height: 52rpx;
  text-align: center;
  background: #EDEDED;
  color: #808080;
  font-size:28rpx;
}
.sure{
  width: 100%;
  height: 88rpx;
  background: #FF5858;
  color: #fff;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
}
